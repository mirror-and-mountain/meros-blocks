{
    "name": "mirror-and-mountain/meros",
    "description": "A starter theme for Wordpress using the Meros Framework",
    "type": "project",
    "version": "dev-main",
    "license": "MIT",
    "authors": [
        {
            "name": "tmw-mm",
            "email": "toby@mirrorandmountain.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "MM\\Meros\\App\\": "app"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/mirror-and-mountain/meros-carousel"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mirror-and-mountain/meros-dynamic-header"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mirror-and-mountain/meros-framework"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mirror-and-mountain/meros-dynamic-page"
        }
    ],
    "require": {
        "mirror-and-mountain/meros-framework": "dev-main",
        "mirror-and-mountain/meros-carousel": "dev-main",
        "mirror-and-mountain/meros-dynamic-header": "dev-main",
        "composer/installers": "^2.3"
    },
    "scripts": {
        "post-autoload-dump": [
            "Roots\\Acorn\\ComposerScripts::postAutoloadDump"
        ],
        "post-update-cmd": [
            "MM\\Meros\\Helpers\\Composer::afterPluginInstall"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        },
        "preferred-install": {
            "mirror-and-mountain/meros-framework": "source",
            "mirror-and-mountain/meros-carousel": "source",
            "mirror-and-mountain/meros-dynamic-header": "source"
        }
    },
    "extra": {
        "installer-paths": {
            "plugins/{$name}/": [
                "type:wordpress-plugin"
            ]
        }
    }
}