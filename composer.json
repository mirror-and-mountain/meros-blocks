{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "mirror-and-mountain/meros-blocks",
    "description": "A blocks-based starter theme for Wordpress using the Meros Framework",
    "type": "project",
    "license": "MIT",
     "keywords": [
        "meros",
        "wordpress",
        "acorn",
        "laravel",
        "livewire"
    ],
    "authors": [
        {
            "name": "tmw-mm",
            "email": "toby@mirrorandmountain.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org",
            "only": [
                "wpackagist-plugin/*",
                "wpackagist-theme/*"
            ]
        }
    ],
    "require": {
        "composer/installers": "^2.3",
        "mirror-and-mountain/meros-framework": "^1.0",
        "mirror-and-mountain/meros-dynamic-page": "^1.0",
        "mirror-and-mountain/meros-dynamic-header": "^1.0",
        "mirror-and-mountain/meros-carousel": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Roots\\Acorn\\ComposerScripts::postAutoloadDump",
            "MM\\Meros\\Scripts\\Composer::installPluginsAndExtensions",
            "MM\\Meros\\Scripts\\Composer::publishLivewireAssets"
        ],
        "post-install-cmd": [
            "MM\\Meros\\Scripts\\Composer::makeCreateScriptExecutable"
        ],
        "create-feature": [
            "MM\\Meros\\Scripts\\Composer::createFeature"
        ]
    },
    "extra": {
        "installer-paths": {
            "plugins/{$name}/": [
                "type:wordpress-plugin"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
