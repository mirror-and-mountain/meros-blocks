{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "mirror-and-mountain/meros",
    "description": "A starter theme for Wordpress using the Meros Framework",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "tmw-mm",
            "email": "toby@mirrorandmountain.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org",
            "only": [
                "wpackagist-plugin/*",
                "wpackagist-theme/*"
            ]
        },
        {
            "type": "vcs",
            "url": "https://github.com/mirror-and-mountain/meros-carousel"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mirror-and-mountain/meros-dynamic-header"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mirror-and-mountain/meros-framework"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mirror-and-mountain/meros-dynamic-page"
        }
    ],
    "require": {
        "composer/installers": "^2.3",
        "mirror-and-mountain/meros-framework": "^0.0.43",
        "mirror-and-mountain/meros-dynamic-header": "^0.0.7",
        "mirror-and-mountain/meros-carousel": "^0.0.6",
        "mirror-and-mountain/meros-dynamic-page": "^0.0.24"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Roots\\Acorn\\ComposerScripts::postAutoloadDump",
            "MM\\Meros\\Scripts\\Composer::handleExtensions"
        ],
        "post-install-cmd": [
            "MM\\Meros\\Scripts\\Composer::makeCreateScriptExecutable"
        ],
        "create-feature": [
            "MM\\Meros\\Scripts\\Composer::createFeature"
        ]
    },
    "extra": {
        "installer-paths": {
            "plugins/{$name}/": [
                "type:wordpress-plugin"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
